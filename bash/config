
# Change default text editor to TextMate
export EDITOR="mate -w"

# When adding items to history, remove duplicates upstream
export HISTCONTROL=erasedups

# Ant
export ANT_VERSION='1.8.2' # 1.7.1
export ANT_HOME="/usr/local/bin/apache-ant-$ANT_VERSION"

# Maven
# 1. drop apache-maven-2.2.1 in /usr/local/bin
# 2. sudo rm /usr/bin/mvn
# 3. sudo ln -s /usr/local/bin/apache-maven-2.2.1/bin/mvn /usr/bin/mvn

# Java
export JAVA_HOME="/Library/Java/Home"
export CLASSPATH="/Library/Java/Extensions/pg73jdbc2ee.jar:."
export JAVA_OPTS="-XX:MaxPermSize=2048m -Xms128m -Xmx2048m"

# SSH
export SSH_ENV="$HOME/.ssh/environment"

# Ruby
export RUBYOPT=rubygems
export RUBY_VERSION=`ruby -e 'print RUBY_VERSION+"-p"+RUBY_PATCHLEVEL.to_s'`
export GEM_HOME="/usr/local/Cellar/ruby/$RUBY_VERSION/lib/ruby/gems/1.9.1/gems"

# Path
export PATH="$GEM_HOME/bin:/usr/local/Cellar/ruby/$RUBY_VERSION/bin:/usr/local/bin:/Developer/Tools:$ANT_HOME/bin:$DOTFILES/bin:$PATH"

# Prompt ( vcprompt: http://vc.gerg.ca/hg/vcprompt )
export PS1="\[\033[1;37m\]\w\$(vcprompt) $ \[\033[0m\]"
