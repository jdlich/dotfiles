
# source
alias reload='source ~/.bashrc'

# ls
alias l='ls -F'
alias la='ls -A'
alias ll='ls -l'
alias lh='ls -lAh'

# cd
alias ..='cd ..'
alias d='cd ~/Desktop'
function cdl { cd $1 && ls; }

# git
alias gs='git status'
alias ga='git add .'
alias gd='git ls-files --deleted | xargs git rm'
alias gc='git commit -a'
alias gl='git log --pretty="%H %s"'
alias gp='git push'
alias gf='git difftool'

# temporarily switch to maven 2 in current shell
function m2 { 
  export M2_HOME='/usr/local/bin/apache-maven-2.2.1'
  export PATH='$M2_HOME/bin:$PATH'
}

# svn
alias ss='svn status'
function sd { svn status | ruby -ne '$_.match(/^!\s+(.+)\n/) { puts $1 }' | xargs svn rm; }
function sf { svn diff --diff-cmd=ksdiff-svnwrapper $1; }

# patch
function patch { patch -p0 -i $1; }

# change to project directory
function c { cd ~/Code/$1; }

# change to site directory
function s { cd ~/Sites/$1; }

# search for a file
function f { find -x . -name $1; }

# make files invisible/visible
function hide { SetFile -a V $1; }
function show { SetFile -a v $1; }

# copy working directory & filename to clipboard
alias cwd='echo -n `pwd` | pbcopy'
alias cfn='echo -n $(basename `pwd`) | pbcopy'

# copy ip address to clipboard
function ip { ifconfig en1 | ruby -ne '$_.match(/inet\s((\d|\.)+)/) { print $1 }' | pbcopy; }

# unpack tar file
function unpack { tar -xvzf $1; }

# list out tcp connections
function tcp { lsof -i tcp:$1; }

# find and open file in textmate
function goto { find . -name $1 | xargs mate; }

# open (mostly markdown) files with iA Writer
function write {
	if [ ! -e $1 ]; then touch $1; fi; open -a "iA Writer" $1
}
